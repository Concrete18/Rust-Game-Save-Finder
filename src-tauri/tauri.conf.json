{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Game Save Finder",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": false,
        "minimize": true,
        "unmaximize": false,
        "unminimize": true,
        "startDragging": true
      },
      "clipboard": {
        "all": false,
        "writeText": true,
        "readText": false
      }
    },
    "windows": [
      {
        "title": "Game Save Finder",
        "width": 700,
        "height": 438,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.concrete.game-save-finder",
      "icon": [
        "icons/Save_icon.ico"
      ]
    }
  }
}
